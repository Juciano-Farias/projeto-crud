<!DOCTYPE html>
<html>
<body>

    <h1><%= tittle %> </h1>
    <%- include('partials/navbar.ejs') %>
    <% if (typeof message !=='undefined' ) { %>
        <%= message %>
    <%} %> 
    <form action="/edit/<%= user._id%>" method="POST">
        <div>
            <label>Nome</label>
            <input type="text" name="name" placeholder="Digíte o seu nome" value="<%= user.name%>">
        </div>
        <div>
            <label>Idade</label>
            <input type="text" name="age" placeholder="Digíte a sua idade" value="<%= user.age%>">
        </div>
        <div>
            <label>E-mail</label>
            <input type="text" name="email" placeholder="Digíte o seu E-mail" value="<%= user.email%>">
        </div>
        <button type="submit">Editar</button>
    </form>
</body>
</html>